<%= simple_form_for @member do |f| %>
  <div class='form-row'>
    <div class='form-group col-3'>
      <%= f.input :name, label: false, placeholder: 'Member Name', input_html: { class: 'form-control' } %>
    </div>

    <%= f.simple_fields_for :website do |ws| %>
      <div class='form-group col-3'>
        <%= ws.input :url, label: false, placeholder: 'Member website', input_html: { class: 'form-control' } %>
      </div>
    <% end %>

  <div class='form-group'>
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>

